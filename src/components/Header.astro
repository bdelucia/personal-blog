---
import { Button } from '$lib/components/ui/button';

const links = [
	{ href: '/', label: 'Home' },
	{ href: '/blog', label: 'Blog' },
	{ href: '/about', label: 'About' },
];

const { pathname } = Astro.url;
---

<header class="sticky top-0 z-50 w-full border-b bg-[#242424]/95 backdrop-blur supports-[backdrop-filter]:bg-[#242424]/60">
	<div class="container flex h-14 items-center">
		<a href="/" class="mr-6 flex items-center space-x-2">
			<span class="hidden font-bold sm:inline-block">My Blog</span>
		</a>
		<nav class="flex items-center space-x-6 text-sm font-medium">
			{links.map(({ href, label }) => (
				<Button 
					href={href} 
					variant={pathname === href || (href !== '/' && pathname.startsWith(href)) ? "secondary" : "ghost"}
					class="text-foreground transition-colors"
				>
					{label}
				</Button>
			))}
		</nav>
	</div>
</header>
